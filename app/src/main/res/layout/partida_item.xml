<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textID"
        android:layout_alignRight="@+id/textID"
        android:layout_below="@+id/textID"
        android:text="TextView" />

    <TextView
        android:id="@+id/textData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textLocal"
        android:layout_alignStart="@+id/textLocal"
        android:layout_below="@+id/textLocal"
        android:text="TextView" />

    <TextView
        android:id="@+id/textHorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textData"
        android:layout_alignStart="@+id/textData"
        android:layout_below="@+id/textData"
        android:text="TextView" />

    <TextView
        android:id="@+id/textFaixaEtaria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textHorario"
        android:layout_alignRight="@+id/textHorario"
        android:layout_below="@+id/textHorario"
        android:text="TextView" />

    <TextView
        android:id="@+id/textValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textFaixaEtaria"
        android:layout_alignStart="@+id/textFaixaEtaria"
        android:layout_below="@+id/textFaixaEtaria"
        android:text="TextView" />

    <TextView
        android:id="@+id/textQuantidadeJogadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textValor"
        android:text="TextView" />
</RelativeLayout>